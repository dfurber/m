- add_script 'jquery.galleriffic'
- add_script 'jquery.opacityrollover'
- add_script 'galleriffic'
- photos = resource.photos
- if photos.present?
  - content_for :head do
    %meta{:property => 'og:image', :content => photos.first.file.url(:thumb)}
  #slideshow
  #loading.loader{:style => "display:none"}
  #gallery_side_panel
    = render_sidebar_menu
    #thumbs
      %ul.thumbs.noscript
        - photos.each do |photo|
          %li= link_to image_tag(photo.file.url(:album)), photo.file.url, :class => :thumb
    #controls
    - if @body.present?
      #text-content= simple_format(@body.html_safe)
  
.clear
